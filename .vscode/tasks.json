{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "command": "tsc",
            "isShellCommand": true,
            "args": [
                "-w",
                "-p",
                "."
            ],
            "ShowOutput": "silent",
            "isWatching": true,
            "problemMatcher": "$tsc-watch"
        },
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": "build",
            "label": "tsc: build - tsconfig.json"
        }
    ]
}